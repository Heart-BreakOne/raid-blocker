{
   "manifest_version": 3,
   "name": "Chat raid blocker",
   "version": "1.0.0",
   "description": "Disable chat raids",
   "action": {
      "default_icon": {
         "48": "icons/icon-128.png",
         "128": "icons/icon-128.png"
      }
   },
   "permissions": [
      "storage",
      "activeTab"
   ],
   "content_scripts": [
      {
         "js": [
            "content_script.js"
         ],
         "matches": [
            "https://www.twitch.tv/*"
         ]
      }
   ],
   "icons": {
      "128": "icons/icon-128.png",
      "48": "icons/icon-48.png"
   }
}
